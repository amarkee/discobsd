TOPSRC!=cd ../..; pwd
include $(TOPSRC)/target.mk

BIN		= date
SRCS            = $(BIN).c
OBJS            = $(BIN).o

all:            $(BIN)

$(BIN):    ${OBJS}
		${CC} ${CFLAGS} ${LDFLAGS} -o $@ ${OBJS} ${LIBS}

.SUFFIXES:      .0 .1

clean:
		rm -f *.o *.elf ${MAN} *.elf *.dis tags *~ $(BIN)

depend:         ${SRCS}
		mkdep ${CFLAGS} ${SRCS}

install:        all
		install -m 755 $(BIN) ${DESTDIR}/bin

lint:           ${SRCS}
		lint -hax ${SRCS}

tags:           ${SRCS}
		ctags ${SRCS}
